package chap05;

import java.util.Random;
public class Lottery {
	
	public int[] LotteryNum() {
	Random random = new Random();
	random.setSeed(System.currentTimeMillis());
	int lotto[] = new int[6];
	
	for (int i=0;i<lotto.length;i++) {
		lotto[i]=random.nextInt(45)+1;
		for(int j=0;j<i;j++) {
			if(lotto[i]==lotto[j]) {
				i--;
				}
			}
	
		}
	return lotto;
	}
}
