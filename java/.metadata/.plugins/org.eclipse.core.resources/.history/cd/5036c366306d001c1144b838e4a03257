package chap02;

public class Quiz2 {

	public static void main(String[] args) {
		int n;
		
		System.out.println("상품의 물건 값을 입력하세요: 3210");
		n = 10000-3210;
		System.out.println("거스름돈은 : "+n+"원입니다.");
		System.out.println("오천원권 : "+n/5000+"장");
		System.out.println("천원권 : "+n/1000+"장");
		System.out.println("오백원짜리 동전 : "+(n-6000)/500+"개");
		System.out.println("백원짜리 동전 : "+n+"개");
		System.out.println("오십원짜리 동전 : "+n+"개");
		System.out.println("십원짜리 동전 : "+n+"개");

	}

}
