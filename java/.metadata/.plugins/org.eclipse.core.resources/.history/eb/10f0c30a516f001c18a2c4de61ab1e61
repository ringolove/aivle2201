package chap04;

import java.util.Scanner;
public class DateExampleAns {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		DateAns myDate = new DateAns();
		
		System.out.print("년도를 입력하세요: ");
		myDate.year = input.nextInt();
		System.out.print("월을 입력하세요: ");
		myDate.month = input.nextInt();
		System.out.print("일을 입력하세요: ");
		myDate.day = input.nextInt();
		input.close();
		
		System.out.println(myDate.year+"년 "+myDate.month+"월 "+myDate.day+"일은 "+myDate.getWeekday()+"요일입니다.");

	}

}
