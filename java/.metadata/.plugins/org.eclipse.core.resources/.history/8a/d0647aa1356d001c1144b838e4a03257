package chap02;

import java.util.Scanner;
public class Quiz3 {

	public static void main(String[] args) {
		 
		int d, v, t, m;
		double s;
		
		Scanner distance = new Scanner(System.in);
		Scanner velocity = new Scanner(System.in);
		
		System.out.print("거리(km) 입력: ");
		d = distance.nextInt();
		
		System.out.print("속력(km/h) 입력: ");
		v = velocity.nextInt();
		
		distance.close();
		velocity.close();
		
		t = d/v;
		double t2 = (double) t;
		
		m = (d/v - t2)*60;
		
		s = ((d/v - t)*60 - m)*60;
		
		System.out.println("소요시간은 "+t+"시간 "+m+"분 "+s+"초입니다.");

	}

}
